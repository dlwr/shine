{
  "name": "shine",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "api:dev": "cd api && wrangler dev --persist-to=../db/dev",
    "api:deploy": "cd api && wrangler deploy --minify",
    "scrapers:dev": "cd scrapers && wrangler dev --persist-to=../db/dev",
    "scrapers:deploy": "cd scrapers && wrangler deploy --minify",
    "with-local-db": "./with-local-db.sh",
    "db:studio:dev": "pnpm with-local-db -- drizzle-kit studio",
    "db:studio:prod": "drizzle-kit studio",
    "db:generate:dev": "pnpm with-local-db -- drizzle-kit generate",
    "db:generate:prod": "drizzle-kit generate",
    "db:migrate:dev": "pnpm with-local-db -- drizzle-kit migrate",
    "db:migrate:prod": "drizzle-kit migrate",
    "db:push:dev": "pnpm with-local-db -- drizzle-kit push",
    "db:push:prod": "drizzle-kit push"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250327.0",
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "better-sqlite3": "^11.9.1",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.23.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "wrangler": "^4.6.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.5"
  },
  "workspaces": [
    "api",
    "scrapers",
    "db"
  ]
}
