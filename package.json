{
  "name": "shine",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently -n \"api,front\" -c \"blue,purple\" \"pnpm run api:dev\" \"pnpm run front:dev\"",
    "test": "vitest",
    "test:api": "vitest apps/api/src",
    "test:scrapers": "vitest apps/scrapers/src",
    "test:front": "vitest --config vitest.front.config.ts",
    "test:database": "vitest packages/database/src",
    "api:dev": "node scripts/setup-database-environment.cjs pnpm wrangler dev --config apps/api/wrangler.toml --env development",
    "api:deploy:dev": "pnpm wrangler deploy --config apps/api/wrangler.toml --env development",
    "api:deploy:prod": "pnpm wrangler deploy --config apps/api/wrangler.toml --env production --minify",
    "front:dev": "pnpm --filter @shine/front run dev",
    "front:build": "pnpm --filter @shine/front run build",
    "front:deploy:dev": "pnpm run front:build && cd apps/front && pnpm wrangler deploy --config build/server/wrangler.json --name shine-front-dev",
    "front:deploy:prod": "pnpm run front:build && cd apps/front && pnpm wrangler deploy --config build/server/wrangler.json --name shine-front --minify",
    "scrapers:academy-awards": "pnpm --filter @shine/scrapers tsx src/academy-awards-cli.ts",
    "scrapers:japan-academy-awards": "pnpm --filter @shine/scrapers tsx src/japan-academy-awards-cli.ts",
    "scrapers:movie-posters": "pnpm --filter @shine/scrapers tsx src/movie-posters-cli.ts",
    "scrapers:japanese-translations": "pnpm --filter @shine/scrapers tsx src/japanese-translations-cli.ts",
    "scrapers:cannes-film-festival": "pnpm --filter @shine/scrapers tsx src/cannes-film-festival-cli.ts",
    "scrapers:movie-import": "pnpm --filter @shine/scrapers tsx src/movie-import-from-list-cli.ts",
    "scrapers:assign-imdb-ids": "pnpm --filter @shine/scrapers run assign-imdb-ids",
    "db:studio": "node scripts/setup-database-environment.cjs drizzle-kit studio",
    "db:generate": "node scripts/setup-database-environment.cjs drizzle-kit generate",
    "db:migrate": "node scripts/setup-database-environment.cjs drizzle-kit migrate",
    "db:push": "node scripts/setup-database-environment.cjs drizzle-kit push",
    "db:studio:prod": "NODE_ENV=production node scripts/setup-database-environment.cjs drizzle-kit studio",
    "db:generate:prod": "NODE_ENV=production node scripts/setup-database-environment.cjs drizzle-kit generate",
    "db:migrate:prod": "NODE_ENV=production node scripts/setup-database-environment.cjs drizzle-kit migrate",
    "db:push:prod": "NODE_ENV=production node scripts/setup-database-environment.cjs drizzle-kit push",
    "docs:validate": "redocly lint apps/api/openapi.yml",
    "docs:build": "redocly build-docs apps/api/openapi.yml --output docs/api.html",
    "docs:serve": "redocly preview-docs apps/api/openapi.yml",
    "docs:bundle": "redocly bundle apps/api/openapi.yml --output apps/api/openapi.json",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "pnpm exec eslint . --fix && pnpm run format:fix",
    "lint:front": "eslint apps/front/app --ext .ts,.tsx",
    "lint:front:fix": "eslint apps/front/app --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "pnpm --filter @shine/front run typecheck && tsc -b",
    "check": "concurrently -n \"lint,types\" -c \"yellow,green\" \"pnpm lint\" \"tsc --build --noEmit\"",
    "typegen": "cd apps/front && npx react-router typegen"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.53",
    "@eslint/js": "^9.38.0",
    "@cloudflare/workers-types": "^4.20251011.0",
    "@redocly/cli": "^1.34.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "better-sqlite3": "^12.1.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import-x": "^4.5.0",
    "eslint-plugin-n": "^17.13.2",
    "eslint-plugin-promise": "^7.2.0",
    "eslint-plugin-unicorn": "^56.0.0",
    "drizzle-kit": "^0.31.1",
    "globals": "^16.0.0",
    "jsdom": "^27.0.1",
    "msw": "^2.11.6",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4",
    "typescript-eslint": "^8.18.0",
    "wrangler": "4.42.0"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.6",
    "zod": "^4.0.5"
  },
  "workspaces": [
    "api",
    "scrapers",
    "front"
  ]
}
