{
  "name": "shine",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "api:dev": "cd api && wrangler dev --env development",
    "api:deploy:dev": "cd api && wrangler deploy --env development",
    "api:deploy:prod": "cd api && wrangler deploy --env production --minify",
    "front:dev": "cd front && pnpm run dev",
    "front:deploy": "cd front && pnpm run deploy",
    "scrapers:academy-awards": "cd scrapers && pnpm tsx src/academy-awards.ts",
    "scrapers:movie-posters": "cd scrapers && pnpm tsx src/movie-posters-cli.ts",
    "scrapers:japanese-translations": "cd scrapers && pnpm tsx src/japanese-translations-cli.ts",
    "scrapers:cannes-film-festival": "cd scrapers && pnpm tsx src/cannes-film-festival-cli.ts",
    "db:studio": "node scripts/setup-db-env.cjs drizzle-kit studio",
    "db:generate": "node scripts/setup-db-env.cjs drizzle-kit generate",
    "db:migrate": "node scripts/setup-db-env.cjs drizzle-kit migrate",
    "db:push": "node scripts/setup-db-env.cjs drizzle-kit push",
    "db:studio:prod": "NODE_ENV=production node scripts/setup-db-env.cjs drizzle-kit studio",
    "db:generate:prod": "NODE_ENV=production node scripts/setup-db-env.cjs drizzle-kit generate",
    "db:migrate:prod": "NODE_ENV=production node scripts/setup-db-env.cjs drizzle-kit migrate",
    "db:push:prod": "NODE_ENV=production node scripts/setup-db-env.cjs drizzle-kit push"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250404.0",
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "better-sqlite3": "^11.9.1",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.23.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "wrangler": "^4.19.1"
  },
  "dependencies": {
    "@libsql/client": "^0.15.8",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.1",
    "hono": "^4.7.5"
  },
  "workspaces": [
    "api",
    "scrapers",
    "front"
  ]
}
