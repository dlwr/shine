{
  "files": [],
  "references": [
    {"path": "./front"},
    {"path": "./api"},
    {"path": "./scrapers"}
  ],
  "compilerOptions": {
    // Enable latest features
    "lib": ["ES2022", "WebWorker", "ES2021"],
    "target": "ES2022",
    "downlevelIteration": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["node", "@cloudflare/workers-types"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "db": ["./src"],
      "db/*": ["./src/*"],
      "@shine/db": ["src"],
      "@shine/db/*": ["src/*"],
      "@shine/scrapers": ["scrapers"],
      "@shine/scrapers/*": ["scrapers/*"],
      "@shine/api": ["api"],
      "@shine/api/*": ["api/*"]
    }
  },
  "exclude": [
    "coverage/**/*",
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/build/**/*"
  ]
}
