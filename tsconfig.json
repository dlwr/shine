{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["node"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@shine/db": ["db"],
      "@shine/db/*": ["db/*"],
      "@shine/scrapers": ["scrapers"],
      "@shine/scrapers/*": ["scrapers/*"],
      "@shine/api": ["api"],
      "@shine/api/*": ["api/*"]
    }
  }
}
