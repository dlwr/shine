{
  "files": [],
  "references": [
    {"path": "./apps/front"},
    {"path": "./apps/api"},
    {"path": "./apps/scrapers"},
    {"path": "./packages/database"},
    {"path": "./packages/utils"},
    {"path": "./packages/types"}
  ],
  "compilerOptions": {
    "composite": true,
    // Enable latest features
    "lib": ["ES2022", "WebWorker", "ES2021"],
    "target": "ES2022",
    "downlevelIteration": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["node", "@cloudflare/workers-types"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@shine/database": ["packages/database/src"],
      "@shine/database/*": ["packages/database/src/*"],
      "@shine/utils": ["packages/utils/src"],
      "@shine/utils/*": ["packages/utils/src/*"],
      "@shine/types": ["packages/types/src"],
      "@shine/types/*": ["packages/types/src/*"],
      "@shine/scrapers": ["apps/scrapers/src"],
      "@shine/scrapers/*": ["apps/scrapers/src/*"],
      "@shine/api": ["apps/api/src"],
      "@shine/api/*": ["apps/api/src/*"],
      "@shine/front": ["apps/front/app"],
      "@shine/front/*": ["apps/front/app/*"]
    }
  },
  "exclude": [
    "coverage/**/*",
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/build/**/*"
  ]
}
