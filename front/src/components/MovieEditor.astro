    async saveImdbId() {
      if (!this.adminToken) {
        this.showError("管理者権限が必要です");
        return;
      }

      const inputEl = document.getElementById("imdb-id-input") as HTMLInputElement | null;
      const refreshEl = document.getElementById("refresh-data") as HTMLInputElement | null;
      
      if (!inputEl) {
        this.showError("入力フィールドが見つかりません");
        return;
      }

      const imdbId = inputEl.value.trim();
      const refreshData = refreshEl?.checked || false;

      // Validate IMDb ID format if not empty
      if (imdbId && !/^tt\d+$/.test(imdbId)) {
        this.showError("IMDb IDは「tt」から始まる数字の形式で入力してください（例: tt0123456）");
        return;
      }

      try {
        const response = await fetch(
          `${this.apiUrl}/admin/movies/${this.movieId}/imdb-id`,
          {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
              Authorization: `Bearer ${this.adminToken}`,
            },
            body: JSON.stringify({ 
              imdbId: imdbId || undefined,
              refreshData 
            }),
          }
        );

        if (!response.ok) {
          const errorData = await response.json() as { error?: string };
          throw new Error(errorData.error || "IMDb IDの更新に失敗しました");
        }

        const result = await response.json() as {
          success: boolean;
          refreshResults?: {
            tmdbId?: number;
            postersAdded: number;
            translationsAdded: number;
          };
        };
        
        // Show refresh results if data was refreshed
        if (result.refreshResults) {
          const { tmdbId, postersAdded, translationsAdded } = result.refreshResults;
          let message = "IMDb IDを更新しました。";
          
          if (tmdbId) {
            message += `\nTMDb ID: ${tmdbId}`;
          }
          if (postersAdded > 0) {
            message += `\nポスター: ${postersAdded}件追加`;
          }
          if (translationsAdded > 0) {
            message += `\n翻訳: ${translationsAdded}件追加（英語・日本語）`;
