---
export interface Props {
  type: 'movieCard' | 'movieList' | 'text' | 'paragraph';
  count?: number;
  className?: string;
}

const { type, count = 1, className = '' } = Astro.props;
---

{type === 'movieCard' && (
  <div class={`space-y-6 ${className}`}>
    {Array.from({ length: count }).map(() => (
      <div class="bg-white rounded-lg shadow-md p-6 animate-pulse">
        <div class="flex space-x-4">
          <div class="flex-shrink-0">
            <div class="w-24 h-36 bg-gray-300 rounded"></div>
          </div>
          <div class="flex-1 space-y-3">
            <div class="h-6 bg-gray-300 rounded w-3/4"></div>
            <div class="space-y-2">
              <div class="h-4 bg-gray-300 rounded w-1/2"></div>
              <div class="h-4 bg-gray-300 rounded w-2/3"></div>
            </div>
            <div class="flex space-x-2">
              <div class="h-6 bg-gray-300 rounded w-16"></div>
              <div class="h-6 bg-gray-300 rounded w-20"></div>
            </div>
          </div>
        </div>
        <div class="mt-4 space-y-2">
          <div class="h-4 bg-gray-300 rounded w-full"></div>
          <div class="h-4 bg-gray-300 rounded w-4/5"></div>
        </div>
      </div>
    ))}
  </div>
)}

{type === 'movieList' && (
  <div class={`space-y-4 ${className}`}>
    {Array.from({ length: count }).map(() => (
      <div class="flex items-center space-x-4 p-4 bg-white rounded-lg shadow animate-pulse">
        <div class="w-16 h-24 bg-gray-300 rounded"></div>
        <div class="flex-1 space-y-2">
          <div class="h-5 bg-gray-300 rounded w-3/4"></div>
          <div class="h-4 bg-gray-300 rounded w-1/2"></div>
          <div class="h-4 bg-gray-300 rounded w-2/3"></div>
        </div>
      </div>
    ))}
  </div>
)}

{type === 'text' && (
  <div class={`animate-pulse ${className}`}>
    {Array.from({ length: count }).map(() => (
      <div class="h-4 bg-gray-300 rounded w-3/4 mb-2"></div>
    ))}
  </div>
)}

{type === 'paragraph' && (
  <div class={`animate-pulse space-y-2 ${className}`}>
    {Array.from({ length: count }).map(() => (
      <div class="space-y-2">
        <div class="h-4 bg-gray-300 rounded w-full"></div>
        <div class="h-4 bg-gray-300 rounded w-5/6"></div>
        <div class="h-4 bg-gray-300 rounded w-4/5"></div>
      </div>
    ))}
  </div>
)}