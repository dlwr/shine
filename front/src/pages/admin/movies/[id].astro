---
import Layout from '../../../layouts/Layout.astro';
import MovieEditor from '../../../components/MovieEditor.astro';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/movies');
}
---

<Layout title="映画の編集 - SHINE Admin">
  <main>
    <div class="admin-header">
      <h1>映画の編集</h1>
      <div class="header-actions">
        <a href="/admin/movies" class="btn btn-secondary">← 一覧に戻る</a>
        <a href="/admin/logout" class="btn btn-danger">ログアウト</a>
      </div>
    </div>
    <MovieEditor movieId={id} />
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    background: #f3f4f6;
    padding: 20px 0;
  }

  .admin-header {
    max-width: 800px;
    margin: 0 auto 20px;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .admin-header h1 {
    margin: 0;
    color: #1f2937;
    font-size: 1.875rem;
  }

  .header-actions {
    display: flex;
    gap: 12px;
  }

  .btn {
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    display: inline-block;
  }

  .btn-secondary {
    background: #6b7280;
    color: white;
  }

  .btn-secondary:hover {
    background: #4b5563;
  }

  .btn-danger {
    background: #dc2626;
    color: white;
  }

  .btn-danger:hover {
    background: #b91c1c;
  }
</style>

<script>
  // Check auth on client side
  if (!localStorage.getItem('adminToken')) {
    window.location.href = '/admin/login';
  }
</script>