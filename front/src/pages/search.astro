---
import Layout from '../layouts/Layout.astro';
import MovieSearch from '../components/MovieSearch.astro';
import LanguageSelector from '../components/LanguageSelector.astro';

const locale = Astro.url.searchParams.get('lang') || 'en';

const pageTitle = locale === 'ja' ? '映画検索 | SHINE' : 'Movie Search | SHINE';
const pageDescription = locale === 'ja' 
  ? '映画データベースを検索して、タイトル、年代、言語、受賞歴でフィルタリングできます'
  : 'Search our movie database and filter by title, year, language, and awards';
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      <LanguageSelector locale={locale} />
      <MovieSearch locale={locale} />
    </div>
  </main>
</Layout>