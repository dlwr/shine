{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "types": ["@cloudflare/workers-types", "node"],
    "jsxImportSource": "hono/jsx",
    "baseUrl": "..",
    "paths": {
      "db": ["src"],
      "db/*": ["src/*"],
      "@shine/db": ["src"],
      "@shine/db/*": ["src/*"],
      "@shine/scrapers": ["scrapers"],
      "@shine/scrapers/*": ["scrapers/*"],
      "@shine/api": ["api"],
      "@shine/api/*": ["api/*"]
    }
  },
  "include": [
    "src/**/*",
    "../src/**/*",
    "../scrapers/src/common/tmdb-utilities.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
