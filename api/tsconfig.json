{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["@cloudflare/workers-types", "node"],
    "jsxImportSource": "hono/jsx",
    "baseUrl": "..",
    "paths": {
      "db": ["./src"],
      "db/*": ["./src/*"],
      "@shine/db": ["src"],
      "@shine/db/*": ["src/*"],
      "@shine/scrapers": ["scrapers"],
      "@shine/scrapers/*": ["scrapers/*"],
      "@shine/api": ["api"],
      "@shine/api/*": ["api/*"]
    }
  }
}
